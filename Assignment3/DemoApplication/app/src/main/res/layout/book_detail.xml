<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="match_parent">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp" tools:srcCompat="@tools:sample/avatars" android:id="@+id/detail_book_cover"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="20dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/detail_book_price"
            app:layout_constraintTop_toBottomOf="@+id/detail_book_title"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/detail_book_author"
            app:layout_constraintTop_toBottomOf="@+id/detail_book_year"
            android:layout_marginTop="10dp" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/detail_book_year"
            app:layout_constraintTop_toBottomOf="@+id/detail_book_price" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/detail_book_title"
            app:layout_constraintTop_toBottomOf="@+id/detail_book_cover" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="8dp"/>
    <Button
            android:text="Update"
            android:theme="@style/Theme.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/update_button"
            app:layout_constraintTop_toBottomOf="@+id/detail_book_author" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="DELETE"
            android:theme="@style/Theme.AppCompat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/delete_button"
            app:layout_constraintTop_toBottomOf="@+id/update_button" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>